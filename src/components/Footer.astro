---
const startYear = 2025; // Год создания сайта
const currentYear = new Date().getFullYear();
const yearDisplay = startYear === currentYear ? 
    `${currentYear}` : 
    `${startYear}–${currentYear}`;
---

<footer class="footer">
    <div class="container">
        <p>© {yearDisplay} RUS-NEWS. Все права защищены.</p>
        <nav>
            <a href="/about">О сайте</a>
            <!-- <a href="/contact">Контакты</a> -->
            <!-- <a href="/privacy">Конфиденциальность</a> -->

        </nav>
    </div>
</footer>

<style>
.footer {
    background: #333;
    color: white;
    padding: 2rem 0;
    margin-top: 3rem;
}

.footer .container {
  	width: 1600px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer nav {
    display: flex;
    gap: 1rem;
}

.footer a {
    color: #ccc;
    text-decoration: none;
}

.footer a:hover {
    color: white;
}

@media (max-width: 768px) {
    .footer .container {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
}
</style>