---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.scss';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:site_name" content="Мой блог">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    
    <!-- Дополнительные мета-теги -->
    <meta name="robots" content="index, follow">
    <meta name="language" content="Russian">
    <link rel="canonical" href={Astro.url ? Astro.url.href : '/'}>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="alternate icon" href="/favicon.ico">
    
    <style>
        /* Критические стили для правильного лейаута */
        html, body {
            height: 100%;
            margin: 0;
        }
        
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        main {
            flex: 1 0 auto; /* Растягивает основное содержимое */
            width: 100%;
        }
    </style>
</head>
<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
    
    <style>
        /* Дополнительные стили для компонентов */
        /* Если нужно, добавьте сюда минимальные стили для header/footer */
    </style>
</body>
</html>