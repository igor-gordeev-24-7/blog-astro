  position: sticky;
  top: 2rem;
  height: fit-content;
}

.sidebar-section {
  background: white;
  padding: 1.5rem;
  border-radius: 12px;
  box-shadow: 0 2px 20px rgba(0,0,0,0.1);
  margin-bottom: 2rem;
}

.sidebar-section h3 {
  margin: 0 0 1rem 0;
  color: #333;
  font-size: 1.2rem;
  font-weight: 600;
}

.latest-sidebar {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.sidebar-article {
  display: flex;
  gap: 0.75rem;
  padding: 0.75rem 0;
  border-bottom: 1px solid #eee;
  text-decoration: none;
  color: inherit;
  transition: all 0.3s;
}

.sidebar-article:last-child {
  border-bottom: none;
}

.sidebar-article:hover {
  padding-left: 0.5rem;
  border-color: #667eea;
}

.sidebar-article-image {
  flex-shrink: 0;
  width: 70px;
  height: 60px;
  border-radius: 6px;
  overflow: hidden;
}

.sidebar-article-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.sidebar-article:hover .sidebar-article-image img {
  transform: scale(1.05);
}

.sidebar-article-content {
  flex: 1;
  min-width: 0;
}

.sidebar-article h4 {
  margin: 0 0 0.25rem 0;
  font-size: 0.95rem;
  line-height: 1.3;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.sidebar-article:hover h4 {
  color: #667eea;
}

.sidebar-meta {
  display: flex;
  justify-content: space-between;
  font-size: 0.75rem;
  color: #666;
}

.sidebar-meta span:first-child {
  background: #f0f0f0;
  padding: 0.15rem 0.4rem;
  border-radius: 4px;
}

.sidebar-categories {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.sidebar-category {
  padding: 0.5rem;
  background: #f8f9fa;
  border-radius: 6px;
  text-decoration: none;
  color: #555;
  transition: all 0.3s;
  text-align: center;
  font-size: 0.9rem;
