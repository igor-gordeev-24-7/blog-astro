  .article-wrapper {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .sidebar {
    position: static;
  }
}

@media (max-width: 768px) {
  .article-page {
    padding: 1rem;
  }
  
  .article-title {
    font-size: 2rem;
  }
  
  .article-meta {
    flex-wrap: wrap;
  }
  
  .article-image {
    height: 250px;
  }
  
  .navigation-cards {
    grid-template-columns: 1fr;
    gap: 1rem;
