---
import Layout from '../../layouts/Layout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getArticleBySlugSimple, getLatestArticlesSimple, getArticles } from '../../utils/articles-simple';

export async function getStaticPaths() {
  const articles = await getArticles();
  
  return articles.map((article) => ({
    params: {
      slug: article.slug,
    },
    props: {
      article,
    },
  }));
}

const { slug } = Astro.params;
const { article } = Astro.props;
const latestArticles = await getLatestArticlesSimple(3);

// Если статья не найдена - редирект на 404
if (!article) {
  return Astro.redirect('/404');
}

const { Content } = article;

// Форматируем категорию для URL
const categorySlug = article.frontmatter.category 
  ? article.frontmatter.category.toLowerCase().replace(/\s+/g, '-')
  : 'uncategorized';
---

<Layout 
  title={`${article.frontmatter.title} | Мой блог`}
  description={article.frontmatter.description}
>
  <div class="container">
    <div class="article-wrapper">
      <article class="article-page">
        <header class="article-header">
          <div class="article-meta">
            <time datetime={new Date(article.frontmatter.date).toISOString()}>
              {new Date(article.frontmatter.date).toLocaleDateString('ru-RU', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <a href={`/category/${categorySlug}`} class="category-link">
              {article.frontmatter.category}
            </a>
          </div>
          
          <h1 class="article-title">{article.frontmatter.title}</h1>
          
          {article.frontmatter.author && (
            <div class="article-author">
              Автор: <span>{article.frontmatter.author}</span>
            </div>
          )}
          
          {article.frontmatter.image && (
            <div class="article-image">
              <img 
                src={article.frontmatter.image} 
                alt={article.frontmatter.title}
                loading="lazy"
              />
            </div>
          )}
        </header>
        
        <div class="article-content">
          <Content />
        </div>
        
        {article.frontmatter.tags && article.frontmatter.tags.length > 0 && (
          <footer class="article-footer">
            <div class="article-tags">
              <span>Теги:</span>
              <div class="tags-list">
                {article.frontmatter.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </footer>
        )}
      </article>
      
      <aside class="sidebar">
        <div class="sidebar-section">
          <h3>Последние новости</h3>
          <div class="latest-sidebar">
            {latestArticles.map(latestArticle => {
              const latestCategorySlug = latestArticle.frontmatter.category 
                ? latestArticle.frontmatter.category.toLowerCase().replace(/\s+/g, '-')
                : 'uncategorized';
                
              return (
                <a href={`/blog/${latestArticle.slug}`} class="sidebar-article">
                  <h4>{latestArticle.frontmatter.title}</h4>
                  <div class="sidebar-meta">
                    <span>{latestArticle.frontmatter.category}</span>
                    <span>
                      {new Date(latestArticle.frontmatter.date).toLocaleDateString('ru-RU', {
                        day: 'numeric',
                        month: 'short'
                      })}
                    </span>
                  </div>
                </a>
              );
            })}
          </div>
        </div>
        
        <div class="sidebar-section">
          <h3>Категории</h3>
          <div class="sidebar-categories">
            <a href="/category/политика" class="sidebar-category">Политика</a>
            <a href="/category/в-мире" class="sidebar-category">В мире</a>
            <a href="/category/экономика" class="sidebar-category">Экономика</a>
            <a href="/category/общество" class="sidebar-category">Общество</a>
            <a href="/category/происшествия" class="sidebar-category">Происшествия</a>
            <a href="/category/культура" class="sidebar-category">Культура</a>
            <a href="/category/туризм" class="sidebar-category">Туризм</a>
            <a href="/category/наука" class="sidebar-category">Наука</a>
            <a href="/category/армия" class="sidebar-category">Армия</a>
            <a href="/category/спорт" class="sidebar-category">Спорт</a>
          </div>
        </div>
      </aside>
    </div>
  </div>
</Layout>

<style>
.article-wrapper {
  display: grid;
  grid-template-columns: 1fr 300px;
  gap: 3rem;
  margin: 2rem 0;
}

.article-page {
  background: white;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 2px 20px rgba(0,0,0,0.1);
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
  color: #666;
  font-size: 0.9rem;
}

.category-link {
  background: #667eea;
  color: white;
  padding: 0.3rem 0.8rem;
  border-radius: 20px;
  text-decoration: none;
  font-size: 0.85rem;
}

.article-title {
  font-size: 2.5rem;
  margin: 0 0 1.5rem 0;
  line-height: 1.2;
}

.article-author {
  color: #666;
  margin-bottom: 2rem;
  font-style: italic;
}

.article-author span {
  color: #333;
  font-weight: 500;
}

.article-image {
  width: 100%;
  height: 400px;
  margin-bottom: 2rem;
  border-radius: 8px;
  overflow: hidden;
}

.article-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.article-content {
  font-size: 1.1rem;
  line-height: 1.8;
  color: #333;
}

.article-content h2 {
  margin: 2.5rem 0 1rem 0;
  color: #222;
}

.article-content h3 {
  margin: 2rem 0 1rem 0;
  color: #333;
}

.article-content p {
  margin-bottom: 1.5rem;
}

.article-content img {
  max-width: 100%;
  height: auto;
  margin: 1.5rem 0;
  border-radius: 8px;
}

.article-content blockquote {
  border-left: 4px solid #667eea;
  padding-left: 1.5rem;
  margin: 2rem 0;
  font-style: italic;
  color: #555;
}

.article-content ul, .article-content ol {
  margin: 1.5rem 0;
  padding-left: 2rem;
}

.article-content li {
  margin-bottom: 0.5rem;
}

.article-footer {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid #eee;
}

.article-tags {
  margin-bottom: 1.5rem;
}

.article-tags span {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: #555;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 0.4rem 1rem;
  border-radius: 20px;
  font-size: 0.9rem;
}

/* Sidebar */
.sidebar {
  position: sticky;
  top: 2rem;
  height: fit-content;
}

.sidebar-section {
  background: white;
  padding: 1.5rem;
  border-radius: 12px;
  box-shadow: 0 2px 20px rgba(0,0,0,0.1);
  margin-bottom: 2rem;
}

.sidebar-section h3 {
  margin: 0 0 1rem 0;
  color: #333;
  font-size: 1.2rem;
}

.latest-sidebar {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.sidebar-article {
  padding: 1rem 0;
  border-bottom: 1px solid #eee;
  text-decoration: none;
  color: inherit;
}

.sidebar-article:last-child {
  border-bottom: none;
}

.sidebar-article h4 {
  margin: 0 0 0.5rem 0;
  font-size: 1rem;
  line-height: 1.4;
  color: #333;
}

.sidebar-article:hover h4 {
  color: #667eea;
}

.sidebar-meta {
  display: flex;
  justify-content: space-between;
  font-size: 0.8rem;
  color: #666;
}

.sidebar-categories {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.sidebar-category {
  padding: 0.5rem;
  background: #f8f9fa;
  border-radius: 6px;
  text-decoration: none;
  color: #555;
  transition: all 0.3s;
}

.sidebar-category:hover {
  background: #667eea;
  color: white;
}

/* Адаптивность */
@media (max-width: 1024px) {
  .article-wrapper {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .sidebar {
    position: static;
  }
}

@media (max-width: 768px) {
  .article-page {
    padding: 1rem;
  }
  
  .article-title {
    font-size: 2rem;
  }
  
  .article-meta {
    flex-wrap: wrap;
  }
  
  .article-image {
    height: 250px;
  }
}
</style>