.nav-card:hover {
  background: white;
  border-color: #667eea;
  transform: translateY(-3px);
  box-shadow: 0 5px 20px rgba(102, 126, 234, 0.15);
}

.nav-image {
  width: 100%;
  height: 160px;
  overflow: hidden;
}

.nav-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
