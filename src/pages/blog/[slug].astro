  }
}

/* Стиль для одной карточки в навигации */
#navigation-cards .nav-card:only-child {
  grid-column: 1 / -1;
  max-width: 500px;
  margin: 0 auto;
}
</style>

<script is:inline>
// Скрипт для центрирования навигации если только одна ссылка
document.addEventListener('DOMContentLoaded', () => {
  const navigation = document.querySelector('#navigation-cards');
  if (navigation) {
    const cards = navigation.querySelectorAll('.nav-card');
    if (cards.length === 1) {
      const card = cards[0];
      card.style.gridColumn = '1 / -1';
      card.style.maxWidth = '500px';
      card.style.margin = '0 auto';
    }
  }
});
</script>