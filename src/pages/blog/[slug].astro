import Layout from '../../layouts/Layout.astro';
import { getArticles } from '../../utils/articles-simple';

// Функция для получения соседних статей
async function getNeighboringArticles(currentSlug: string) {
  const allArticles = await getArticles();
  
  // Сортируем по дате (от новых к старым)
  const sortedArticles = allArticles.slice().sort((a, b) => {
    const dateA = new Date(a.frontmatter.date).getTime();
    const dateB = new Date(b.frontmatter.date).getTime();
    return dateB - dateA; // От новых к старым
  });
  
  // Находим индекс текущей статьи
  const currentIndex = sortedArticles.findIndex(article => article.slug === currentSlug);
  
  if (currentIndex === -1) {
    return { previous: null, next: null };
  }
  
  // Получаем соседние статьи
  const previousArticle = currentIndex > 0 ? sortedArticles[currentIndex - 1] : null;
  const nextArticle = currentIndex < sortedArticles.length - 1 ? sortedArticles[currentIndex + 1] : null;
  
  return {
    previous: previousArticle,
    next: nextArticle
  };
}

export async function getStaticPaths() {
  const articles = await getArticles();
  
  return articles.map((article) => ({
    params: {
      slug: article.slug,
    },
    props: {
      article,
    },
  }));
}

const { slug } = Astro.params;
const { article } = Astro.props;
const latestArticles = (await getArticles()).slice(0, 3); // Получаем 3 последние статьи

// Получаем соседние статьи
const { previous, next } = await getNeighboringArticles(slug as string);

// Если статья не найдена - редирект на 404
if (!article) {
  return Astro.redirect('/404');
}

const { Content } = article;

// Форматируем категорию для URL
const categorySlug = article.frontmatter.category 
  ? article.frontmatter.category.toLowerCase().replace(/\s+/g, '-')
  : 'uncategorized';

// Функции для форматирования дат
function formatDate(dateInput: string | Date): string {
  const date = dateInput instanceof Date ? dateInput : new Date(dateInput);
  return date.toLocaleDateString('ru-RU', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function formatShortDate(dateInput: string | Date): string {
  const date = dateInput instanceof Date ? dateInput : new Date(dateInput);
  return date.toLocaleDateString('ru-RU', {
    day: 'numeric',
    month: 'short'
  });
}
---

<Layout 
  title={`${article.frontmatter.title} | Мой блог`}
  description={article.frontmatter.description}
>
  <div class="container">
    <div class="article-wrapper">
      <article class="article-page">
        <header class="article-header">
          <div class="article-meta">
            <time datetime={article.frontmatter.date instanceof Date 
              ? article.frontmatter.date.toISOString() 
              : new Date(article.frontmatter.date).toISOString()}>
              {formatDate(article.frontmatter.date)}
            </time>
            <a href={`/category/${categorySlug}`} class="category-link">
              {article.frontmatter.category}
            </a>
          </div>
          
          <h1 class="article-title">{article.frontmatter.title}</h1>
          
          {article.frontmatter.author && (
            <div class="article-author">
              Автор: <span>{article.frontmatter.author}</span>
            </div>
          )}
          
          {article.frontmatter.image && (
            <div class="article-image">
              <img 
                src={article.frontmatter.image} 
                alt={article.frontmatter.title}
                loading="lazy"
              />
            </div>
          )}
        </header>
        
        <div class="article-content">
          <Content />
        </div>
        
        {article.frontmatter.tags && article.frontmatter.tags.length > 0 && (
          <footer class="article-footer">
            <div class="article-tags">
              <span>Теги:</span>
              <div class="tags-list">
                {article.frontmatter.tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </footer>
        )}
        
        <!-- Навигация между статьями -->
        {(previous || next) && (
          <nav class="article-navigation">
            <h3 class="navigation-title">Читайте также</h3>
            <div class="navigation-cards" id="navigation-cards">
              {previous && (
                <a href={`/blog/${previous.slug}`} class="nav-card nav-previous">
                  {previous.frontmatter.image && (
                    <div class="nav-image">
                      <img 
                        src={previous.frontmatter.image} 
                        alt={previous.frontmatter.title}
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="nav-content">
                    <div class="nav-label">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M11 4L7 8L11 12" stroke="currentColor" stroke-width="2" fill="none"/>
                      </svg>
                      Предыдущая статья
                    </div>
                    <h4 class="nav-title">{previous.frontmatter.title}</h4>
                    {previous.frontmatter.description && (
                      <p class="nav-excerpt">
                        {previous.frontmatter.description.substring(0, 100)}
                        {previous.frontmatter.description.length > 100 ? '...' : ''}
                      </p>
                    )}
                  </div>
                </a>
              )}
              
              {next && (
                <a href={`/blog/${next.slug}`} class="nav-card nav-next">
                  {next.frontmatter.image && (
                    <div class="nav-image">
                      <img 
                        src={next.frontmatter.image} 
                        alt={next.frontmatter.title}
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="nav-content">
                    <div class="nav-label">
                      Следующая статья
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M5 12L9 8L5 4" stroke="currentColor" stroke-width="2" fill="none"/>
                      </svg>
                    </div>
                    <h4 class="nav-title">{next.frontmatter.title}</h4>
                    {next.frontmatter.description && (
                      <p class="nav-excerpt">
                        {next.frontmatter.description.substring(0, 100)}
                        {next.frontmatter.description.length > 100 ? '...' : ''}
                      </p>
                    )}
                  </div>
                </a>
              )}
            </div>
          </nav>
        )}
      </article>
      
      <aside class="sidebar">
        <div class="sidebar-section">
          <h3>Последние новости</h3>
          <div class="latest-sidebar">
            {latestArticles.map((latestArticle: any) => {
              const latestCategorySlug = latestArticle.frontmatter.category 
                ? latestArticle.frontmatter.category.toLowerCase().replace(/\s+/g, '-')
                : 'uncategorized';
                
              return (
                <a href={`/blog/${latestArticle.slug}`} class="sidebar-article">
                  {latestArticle.frontmatter.image && (
                    <div class="sidebar-article-image">
                      <img 
                        src={latestArticle.frontmatter.image} 
                        alt={latestArticle.frontmatter.title}
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="sidebar-article-content">
                    <h4>{latestArticle.frontmatter.title}</h4>
                    <div class="sidebar-meta">
                      <span>{latestArticle.frontmatter.category}</span>
                      <span>{formatShortDate(latestArticle.frontmatter.date)}</span>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>
        </div>
        
				<div class="sidebar-section">
					<h3>Категории</h3>
					<div class="sidebar-categories">
						<a href="/category/politics" class="sidebar-category">Политика</a>
						<a href="/category/world" class="sidebar-category">В мире</a>
						<a href="/category/economics" class="sidebar-category">Экономика</a>
						<a href="/category/society" class="sidebar-category">Общество</a>
						<a href="/category/incidents" class="sidebar-category">Происшествия</a>
						<a href="/category/culture" class="sidebar-category">Культура</a>
						<a href="/category/tourism" class="sidebar-category">Туризм</a>
						<a href="/category/science" class="sidebar-category">Наука</a>
						<a href="/category/sports" class="sidebar-category">Спорт</a>
					</div>
				</div>
      </aside>
    </div>
  </div>
</Layout>

<style>
