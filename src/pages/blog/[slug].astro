  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
}

.nav-card {
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
  border-radius: 10px;
  text-decoration: none;
  color: inherit;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  height: 100%;
  overflow: hidden;
