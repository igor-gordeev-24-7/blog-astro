  color: #222;
  font-size: 1.8rem;
}

.article-content :global(h3) {
  margin: 2rem 0 1rem 0;
  color: #333;
  font-size: 1.5rem;
}

.article-content :global(p) {
  margin-bottom: 1.5rem;
}

.article-content :global(img) {
  max-width: 100%;
