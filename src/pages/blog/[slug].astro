  margin-top: 4rem;
  padding-top: 2rem;
  border-top: 2px solid #eee;
}

.navigation-title {
  text-align: center;
  margin-bottom: 2rem;
  color: #333;
  font-size: 1.4rem;
  font-weight: 600;
}

