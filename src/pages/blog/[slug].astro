  display: block;
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: #555;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 0.4rem 1rem;
  border-radius: 20px;
  font-size: 0.9rem;
  transition: all 0.3s;
}

.tag:hover {
  background: #667eea;
  color: white;
}

